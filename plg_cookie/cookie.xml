<?xml version="1.0" encoding="UTF-8"?>
    <extension type="plugin" version="1.0" method="upgrade" group="system">
        <name>PLG_SYSTEM_COOKIE</name>
        <creationDate>April 2021</creationDate>
        <author>Rishabh Ranjan Jha</author>
        <version>1.0</version>
        <description>PLG_SYSTEM_COOKIE_XML_DESCRIPTION</description>

        <files>
            <filename plugin="cookie">cookie.php</filename>
            <filename>styles.css</filename>
            <filename>script.js</filename>
        </files>

        <languages folder="administrator/language">
            <language tag="en-GB">language/en-GB/en-GB.plg_system_cookie.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.plg_system_cookie.sys.ini</language>
        </languages>

         <config>
            <fields name="params">
                <fieldset name="basic">
                  <field
                      name="cookie_bar_title"
                      type="text"
                      label="PLG_SYSTEM_COOKIE_BAR_TITLE_LABEL"
                      description="PLG_SYSTEM_COOKIE_BAR_TITLE_DESC"
                      default="Cookie Policy"
                  />
                    <field
                        name="cookie_bar_text"
                        type="textarea"
                        rows="5"
                        label="PLG_SYSTEM_COOKIE_BAR_TEXT_LABEL"
                        description="PLG_SYSTEM_COOKIE_BAR_TEXT_DESC"
                        default="We use cookies to ensure that we give you the best experience on our website."
                    />
                    
                </fieldset>
            </fields>
        </config>
    </extension>

